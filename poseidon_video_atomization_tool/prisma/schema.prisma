generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id           String      @id @default(uuid())
  filename     String
  originalPath String
  duration     Int?
  createdAt    DateTime    @default(now())
  clips        Clip[]
  transcript   Transcript?
}

model Transcript {
  id        String   @id @default(uuid())
  videoId   String   @unique
  content   String
  createdAt DateTime @default(now())
  video     Video    @relation(fields: [videoId], references: [id])
}

model Clip {
  id          String          @id @default(uuid())
  videoId     String
  title       String
  startTime   Float
  endTime     Float
  orientation ClipOrientation
  filePath    String
  createdAt   DateTime        @default(now())
  video       Video           @relation(fields: [videoId], references: [id])
}

enum ClipOrientation {
  HORIZONTAL
  VERTICAL
}
